{{#view App.FormView}}
  <fieldset class="large-8 columns">
    <legend>Customer</legend>

    <div class="row">
      <div class="large-4 columns">
        <label>Id</label>
        <h5>{{#if id}} {{id}} {{else}} New {{/if}}</h5>
      </div>
    </div>

    <div class="row">
      <div class="large-10 columns">
        <label>First Name</label>
        {{view App.TextField valueBinding="firstName" placeholder="First Name"}}
      </div>
    </div>

    <div class="row">
      <div class="large-10 columns">
        <label>Last Name</label>
        {{view App.TextField valueBinding="lastName" placeholder="Last Name"}}
      </div>
    </div>

    {{#if id}}
      {{#if canUpdate}}
        <button {{action update}} class="small"> Update </button>
      {{else}}
        <button class="small disabled" disabled="disabled"> Update </button>
      {{/if}}
    {{else}}
        <button {{action update}} class="small"> Save </button>
    {{/if}}
  </fieldset>
{{/view}}



