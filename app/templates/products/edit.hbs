<fieldset class="large-8 columns">
  <legend>Product</legend>

  <div class="row">
    <div class="large-4 columns">
      <label>Id</label>
      <h5>{{#if this.model.id}} {{this.model.id}} {{else}} New {{/if}}</h5>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <label>Name</label>
      <Input @value={{this.model.name}} class="light" placeholder="Product Name" />
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>Description</label>
      <Input @value={{this.model.description}} class="light" placeholder="Description" />
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <label>Price</label>
      <Input @value={{this.model.price}} class="light" placeholder="0,00" />
    </div>
  </div>

  {{#if this.model.id}}
    {{#if this.model.hasDirtyAttributes}}
      <button type="button" {{on "click" (fn this.update this.model)}} class="button small radius active"> Update </button>
    {{else}}
      <button type="button" class="button small radius disabled" disabled="disabled"> Update </button>
    {{/if}}
  {{else}}
    <button type="button" {{on "click" (fn this.update this.model)}} class="button small radius active"> Save </button>
  {{/if}}
  <button type="button" {{on "click" (fn this.cancel this.model)}} class="button small radius secondary"> Cancel </button>

</fieldset>

<hr>
{{outlet}}