<ToggleEditor @route="products.edit" @title="New Product" @collapsed={{this.collapsed}} @toggle={{this.toggle}} />

<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th scope="col" width="100">ID</th>
      <th scope="col">Name</th>
      <th scope="col" width="200">Description</th>
      <th scope="col">Price</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
      {{#each this.model as |product|}}
        <tr>
          <th scope="row">
            <LinkTo @route="products.edit" @model={{product}} {{on "click" this.openEditor}}> {{product.id}} </LinkTo>
          </th>
          <td>{{product.name}}</td>
          <td>{{product.description}}</td>
          <td>{{format-currency product.price}}</td>
          <td><button type="button" {{on "click" (fn this.remove product)}} class="btn btn-danger btn-sm"> Delete </button></td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5"></td>
        </tr>
        <tr>
          <td colspan="5" class="nodata">
            <h3>No products found</h3>
          </td>
        </tr>
      {{/each}}
  </tbody>
</table>