<div class="row">
  {{#if this.messaging.hasMessages}}
    <ul class="msg">
      {{#each this.errors as |message|}}
        <li class="msg msg-error">{{message}}</li>
      {{/each}}
      {{#each this.success as |message|}}
        <li class="msg msg-success">{{message}}</li>
      {{/each}}
      {{#each this.fieldErrors as |msg|}}
        <li class="msg msg-error">{{msg.class_name}} {{msg.property}} : {{msg.message}}</li>
      {{/each}}
      <li>
        <button id="closeMessages" type="button" {{on "click" this.clearMessages}} class="tiny button secondary">
          <span class="close">âœ— Close messages</span>
        </button>
      </li>
    </ul>
  {{/if}}
</div>
{{yield}}